#include "main.h"
#include <stdlib.h>
/**
 * create_array - main func
 * @size: int
 * @c: char
 * Return: char
 */
char *create_array(unsigned int size, char c)
{
	char *array;
	int i = 0;
	array = malloc(size);
	if (array == NULL)
	{
		return (NULL);
	}
	while (i < size)
	{
		array[i] = c;
		i++;
	}
	return (array);
}
